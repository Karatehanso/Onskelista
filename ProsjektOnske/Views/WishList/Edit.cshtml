@model olist.Models.WishList

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>WishList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Category" class="control-label">
                    <option value="Bursdag">Bursdag</option>
                    <option value="Bryllup">Bryllup</option>
                    <option value="Jul">Jul</option>
                    <option value="--">Other</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="Privacy" class="control-label">
                    <option value="EveryOne">Everyone</option>
                    <option value="Friends">Friends</option>
                    <option value="None">none</option>
                </select>
                <span asp-validation-for="Privacy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

